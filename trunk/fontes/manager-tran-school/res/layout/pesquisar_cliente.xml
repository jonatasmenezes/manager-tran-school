<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/label_login"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="@string/label_pesquisar_cliente"
        android:textSize="30sp" />

    <TableRow
        android:id="@+id/table_row_header"
        android:padding="20dp" >
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/label_cliente_nome"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/cliente_nome"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/clienteNome"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:inputType="text"
            android:maxLength="80"
            android:textSize="15sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/label_cliente_cpf"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/cliente_cpf"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/clienteCpf"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="15sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/label_cliente_bairro"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/cliente_bairro"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/clienteBairro"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:inputType="text"
            android:maxLength="45"
            android:textSize="15sp" />
    </TableRow>
    
    <TableRow>
        <TextView
            android:id="@+id/label_cliente_cidade"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/cliente_cidade"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/clienteCidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left" />
    </TableRow>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_novo"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:text="@string/btn_novo" />
        <Button
            android:id="@+id/btn_pesquisar"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/btn_pesquisar" />

    </RelativeLayout>

    <ListView
	 android:id="@+id/clientes_list"  
	 android:layout_width="fill_parent"  
	 android:layout_height="wrap_content">  
 	</ListView>
    
</TableLayout>
