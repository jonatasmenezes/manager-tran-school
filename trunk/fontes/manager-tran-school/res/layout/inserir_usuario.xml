<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">

	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="5dp" >
	
	    <TextView
	        android:id="@+id/label_login"
	        android:layout_width="wrap_content"
	        android:gravity="center"
	        android:text="@string/label_incluir_usuario"
	        android:textSize="30sp" />
	
	    <TableRow
	        android:id="@+id/table_row_header"
	        android:padding="20dp" >
	    </TableRow>
	
	    <TableRow>
	
	        <TextView
	            android:id="@+id/label_usuario_nome"
	            android:layout_width="110dp"
	            android:layout_height="40dp"
	            android:gravity="center"
	            android:text="@string/usuario_nome"
	            android:textSize="15sp" />
	
	        <EditText
	            android:id="@+id/usuarioNome"
	            android:layout_width="195dp"
	            android:layout_height="40dp"
	            android:gravity="left"
	            android:inputType="text"
	            android:textSize="15sp" />
	    </TableRow>
	
	    <TableRow>
	
	        <TextView
	            android:id="@+id/label_usuario_login"
	            android:layout_width="110dp"
	            android:layout_height="40dp"
	            android:gravity="center"
	            android:text="@string/usuario_login"
	            android:textSize="15sp" />
	
	        <EditText
	            android:id="@+id/usuarioLogin"
	            android:layout_width="195dp"
	            android:layout_height="40dp"
	            android:gravity="left"
	            android:inputType="text"
	            android:textSize="15sp" />
	    </TableRow>
	
	    <TableRow>
	
	        <TextView
	            android:id="@+id/label_usuario_senha"
	            android:layout_width="110dp"
	            android:layout_height="40dp"
	            android:gravity="center"
	            android:text="@string/usuario_senha"
	            android:textSize="15sp" />
	
	        <EditText
	            android:id="@+id/usuarioSenha"
	            android:layout_width="195dp"
	            android:layout_height="40dp"
	            android:gravity="left"
	            android:inputType="textPassword"
	            android:textSize="15sp" />
	    </TableRow>
	
	    <TableRow>
	        <TextView
	            android:id="@+id/label_usuario_tipo_usuario"
	            android:layout_width="110dp"
	            android:layout_height="40dp"
	            android:gravity="center"
	            android:text="@string/usuario_tipo_usuario"
	            android:textSize="15sp" />
	
	        <Spinner
	            android:id="@+id/usuarioTipoUsuario"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="left" />
	    </TableRow>
	
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	
	        <Button
	            android:id="@+id/btn_salvar"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="90dp"
	            android:text="@string/btn_salvar" />
	        <Button
	            android:id="@+id/btn_cancelar"
	            android:layout_width="90dp"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:text="@string/btn_cancelar" />
	
	    </RelativeLayout>
	
	</TableLayout>
	
</ScrollView>	